<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:src="@drawable/bg"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="40sp"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_gravity="left|bottom"
        android:src="@drawable/logo"/>
        <RelativeLayout
            android:id="@+id/mainheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:padding="10sp"
            >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YaarMe"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Building the world's most luxurious social media."
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/title"/>
        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:text="Information Technology and Services . Raipur, Chhattisgarh"/>
        <TextView
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categories"
            android:text="145 followers"/>
        <LinearLayout
            android:id="@+id/employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followers"
            android:orientation="horizontal">
            <ImageView
                android:padding="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_people_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 employee on LinkedIn"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee"
            android:gravity="center"

            >
            <TextView
                android:id="@+id/followbtn"
                android:clickable="true"
                android:contextClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:text="Follow"
                android:layout_weight="1.5"
                android:layout_margin="10sp"
                android:background="@drawable/followbtn"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/visitwebsite"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:textColor="@color/blue"
                android:background="@drawable/visitbtn"
                android:text="Visit Website"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="1"

                android:textSize="15sp"/>
        </LinearLayout>
        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mainheader">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout"
        app:tabSelectedTextColor="@color/green"
        app:tabIndicatorColor="@color/green"
        app:tabTextColor="@color/black">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab1"
            android:text="Home"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab2"
            android:text="about"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab3"
            android:text="jobs"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab4"
            android:text="People"
            />

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewpager"
        >
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
